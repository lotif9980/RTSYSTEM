@using RTWEB.ViewModel
@model IEnumerable<CustomerIssueVM>

@{
    ViewData["Title"] = "Customer Issue";
}

<div class="card-head">
    <div class="d-flex justify-content-sm-between m-2">
        <div>
            <input type="text" id="searchBox" class="form-control" placeholder="Search Customer Name" />
        </div>

        <div>
            <a asp-controller="CustomerIssue" asp-action="Save" class="btn btn-primary">
                <i class="fa fa-plus me-1"></i> Add Issue
            </a>
            <a asp-controller="CustomerIssue" asp-action="SolvedIssue" class="btn btn-success ms-2">
                <i class="fa fa-check-circle me-1"></i> Solved Issue
            </a>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <!-- 🔹 Table -->
            <div class="table-responsive border rounded">
                <table id="issueTable" class="table table-sm table-bordered table-hover align-middle mb-0">
                    <thead class="table-light text-center">
                        <tr>
                            <th style="width:50px;">#</th>
                            <th style="width:180px;">Customer</th>
                            <th style="width:350px;">Problem</th>
                            <th style="width:100px;">Status</th>
                            <th style="width:100px;">Update</th>
                            <th style="width:100px;">Action</th>
                        </tr>
                    </thead>

                    <tbody id="domainBoady">
                        @{
                            int count = 1;
                        }

                        @foreach (var item in Model)
                        {
                            <tr>
                              
                                <td class="text-center align-middle">@count</td>

                               
                                <td class="align-middle">
                                    <div class="fw-semibold text-dark text-truncate" style="max-width:150px;">
                                        @item.CustomerName
                                    </div>
                                    <small class="text-muted">@item.Domainname</small>
                                </td>

                             
                                <td class="align-middle text-wrap" style="max-width:350px; white-space:normal;">
                                    @item.Problem
                                </td>

                              
                                <td class="text-center align-middle">
                                    <span class="badge bg-info text-dark">@item.Status</span>
                                </td>

                               
                                <td class="text-center align-middle">
                                    <a asp-route-id="@item.Id"
                                       asp-controller="SolvedIssue"
                                       asp-action="UpdateButton"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fa fa-sync me-1"></i> Update
                                    </a>
                                </td>

                               
                                <td class="text-center align-middle">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-route-id="@item.Id"
                                           asp-controller="CustomerIssue"
                                           asp-action="Edit"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a asp-route-id="@item.Id"
                                           asp-controller="CustomerIssue"
                                           asp-action="Delete"
                                           class="btn btn-outline-danger" title="Delete">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#issueTable').DataTable({
            "pageLength": 10,
            "lengthMenu": [5, 10, 20, 50],
            "ordering": true,
            "paging": true,
            "info": true,
            "language": {
                "search": "",
                "searchPlaceholder": "Search",
                "lengthMenu": "_MENU_ rows",
                "info": "_TOTAL_ রেকর্ডের মধ্যে _START_ থেকে _END_ দেখানো হচ্ছে",
                "paginate": {
                    "previous": "⬅️ Previous",
                    "next": "Next ➡️"
                }
            },
            "dom": 'rt<"d-flex justify-content-between align-items-center p-2"<"p-0"l><"p-0"p>>'
        });

        $('#searchBox').on('keyup', function () {
            table.search(this.value).draw();
        });
    });
</script>

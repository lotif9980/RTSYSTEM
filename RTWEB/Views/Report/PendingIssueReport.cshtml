@using RTWEB.ViewModel;
@model List<CustomerIssueVM>

<style>
    .print-hide {
        display: none !important;
    }

    .custom-table {
        table-layout: fixed;
        width: 100%;
    }

        /* Customer column */
        .custom-table th:nth-child(1),
        .custom-table td:nth-child(1) {
            width: 15% !important;
            word-wrap: break-word;
        }

        /* Sl column */
        .custom-table th:nth-child(2),
        .custom-table td:nth-child(2) {
            width: 5% !important;
            text-align: center;
        }

        /* Date column */
        .custom-table th:nth-child(3),
        .custom-table td:nth-child(3) {
            width: 12% !important;
            text-align: center;
            white-space: nowrap;
        }

        /* Domain column (ছোট করা হলো) */
        .custom-table th:nth-child(4),
        .custom-table td:nth-child(4) {
            width: 18% !important;
            word-wrap: break-word;
        }

        /* Problem column (সবচেয়ে বড়) */
        .custom-table th:nth-child(5),
        .custom-table td:nth-child(5) {
            width: 40% !important;
            word-wrap: break-word;
        }

        /* Status column */
        .custom-table th:nth-child(6),
        .custom-table td:nth-child(6) {
            width: 10% !important;
            text-align: center;
        }

    

    @@media print {
        body * {
            visibility: hidden !important;
        }

        .domain-dropdown,
        .domain-dropdown + .select2-container {
            display: none !important;
        }

        .developer-dropdown,
        .developer-dropdown + .select2-container,
        .hidePrint,
        .hidePrint + .select2-container {
            display: none !important;
        }


        .page-container, .page-container * {
            visibility: visible !important;
        }

        button, .btn, a.btn {
            display: none !important;
        }


        table, th, td {
            border: 1px solid #000 !important;
            border-collapse: collapse !important;
        }

            table th, table td {
                background: none !important;
                color: #000 !important;
                font-size: 12pt !important;
                padding: 4pt !important;
            }

        body {
            background: white !important;
            font-size: 17pt !important;
            line-height: 1.2 !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .print-hide {
            display: block !important;
        }
    }

    /* Custom table styling */
    .custom-table th, .custom-table td {
        border: 1px solid #000 !important;
    }

    .col-project {
        width: 20% !important;
        word-wrap: break-word;
    }

    .card.custom-card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
</style>

<div class="container mt-4 page-container">
    <div class="card custom-card print-hide text-center p-3">
        <h1>Pending Issue</h1>
        <p>All Pending Issue</p>
        <p>Date: @DateTime.Now.ToString("dd-MM-yyyy : hh:mm tt")</p>
    </div>

    <!-- Filter Form -->
    <form asp-action="PendingIssueReport" method="post" class="mb-3 row g-2 align-items-end">
        <div class="col-md-4">
            <select id="domainId" name="domainId" class="form-control domain-dropdown">
                <option value="">-- Select Domain --</option>
                @foreach (var p in ViewBag.Domain as List<SelectListItem>)
                {
                    <option value="@p.Value">@p.Text</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <select id="customerId" name="customerId" class="form-control developer-dropdown hidePrint" disabled>
                <option value="">-- Select Customer --</option>
            </select>
        </div>

        <div class="col-md-4 d-flex">
            <button type="submit" class="btn btn-primary m-2">View</button>
            <a class="btn btn-danger m-2" asp-action="DomainUpdateList">Reset</a>
            <button type="button" class="btn btn-info m-2" onclick="window.print()">
                <i class="fa fa-print"></i>
            </button>
            <a class="btn btn-primary m-2" asp-controller="Domain" asp-action="Index">Domain List</a>
        </div>
    </form>


    @if (Model != null && Model.Any())
    {
        var groupedData = Model
        .GroupBy(x => x.CustomerName)
        .ToList();

        <table class="table table-bordered custom-table">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Sl</th>
                    <th>Date</th>
                    <th>Domain</th>
                    <th>Problem</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in groupedData)
                {
                    var rowCount = group.Count();
                    var isFirstRow = true;
                    var customerSl = 1; 

                    @foreach (var item in group)
                    {
                        <tr>
                            @if (isFirstRow)
                            {
                                <td rowspan="@rowCount" style="vertical-align:middle; font-weight:bold;">
                                    @group.Key
                                </td>
                            }

                            <td>@customerSl</td>
                            <td>@item.CreateDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.Domainname</td>
                            <td>@item.Problem</td>
                            <td>@item.Status</td>
                        </tr>

                        isFirstRow = false;
                        customerSl++;
                    }
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No data available for the selected criteria.</p>
    }
</div>


<script>
    $(document).ready(function () {
        // select2 init
        $(".domain-dropdown").select2({
            placeholder: "--Select Domain--",
            allowClear: true,
            width: '100%'
        });

        $(document).on('select2:open', () => {
            document.querySelector('.select2-search__field').focus();
        });

        $(".developer-dropdown").select2({
            placeholder: "--Select Customer--",
            allowClear: true,
            width: '100%'
        });

        $(document).on('select2:open', () => {
            document.querySelector('.select2-search__field').focus();
        });




        // domain change -> load customers
        $('#domainId').on('change', function () {
            var domainId = $(this).val();
            var $customerDropdown = $('#customerId');

            $customerDropdown.empty()
                .append('<option value="">-- Select Customer --</option>')
                .prop('disabled', true);

            if (domainId) {
                $.ajax({
                    url: '/SolvedIssue/DomainWiseCustomer', // controller action যা JSON রিটার্ন করবে
                    type: 'GET',
                    data: { domainId: domainId },
                    dataType: 'json',
                    success: function (data) {
                        $.each(data, function (i, customer) {
                            $customerDropdown.append($('<option>', {
                                value: customer.id,
                                text: customer.customerName
                            }));
                        });
                        $customerDropdown.prop('disabled', false);
                    }
                });
            }
        });
    });
</script>

@using RTWEB.ViewModel
@* @model IEnumerable<UpdateVM> *@
@model HMSYSTEM.ViewModels.PagedResult<CustomerSolvedIssueVM>

@{
    ViewData["Title"] = "Solved Issue";
}

<div class="container-fluid mt-3">
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="date" name="date" class="form-control col-sm-3" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-danger">Reset</a>
        </div>
    </form>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <a asp-controller="SolvedIssue" asp-action="Save" class="btn btn-primary">New Item</a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Sl</th>
                                <th>Date</th>
                                <th>Customer Name</th>
                                <th>Solved By</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                            }
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@(item.SolvedDate?.ToString("dd-MM-yyyy"))</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.SolvedBy</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">
                                            <a class="btn btn-success ms-2" asp-route-id="@item.Id" asp-controller="SolvedIssue" asp-action="Details">
                                                <i class="fa fa-eye"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2"
                                               asp-route-id="@item.Id"
                                               asp-controller="SolvedIssue" asp-action="Delete">
                                                <i class="fa fa-trash"></i>

                                            </a>

                                            
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    @await Html.PartialAsync("_Pagination", Model)
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>
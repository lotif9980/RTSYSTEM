@model RTWEB.ViewModel.CustomerSolvedIssueVM

<style>

    .print-hide {
        display: none !important;
    }

    @@media print {
        /* Hide everything except page-container */
        body * {
            visibility: hidden !important;
        }

        .page-container,
        .page-container * {
            visibility: visible !important;
        }

            .page-container dl.row {
                display: block !important; /* block wrapper for each pair */
                margin-bottom: 6pt !important;
            }
                /* Each dt+dd pair inline */
                .page-container dl.row dt,
                .page-container dl.row dd {
                    display: inline-block !important;
                    float: none !important;
                    margin: 0 !important;
                    padding: 0 4pt 0 0 !important;
                    vertical-align: top;
                }
                /* Fixed width for dt, remaining space for dd */
                .page-container dl.row dt {
                    width: 25% !important; /* adjust as needed */
                    font-weight: bold !important;
                }

                .page-container dl.row dd {
                    width: 70% !important; /* adjust as needed */
                }
        /* Override Bootstrap cols */
        .col-sm-4, .col-sm-8 {
            width: auto !important;
            float: none !important;
            display: inline-block !important;
        }
        /* Hide buttons */
        button, .btn, a.btn {
            display: none !important;
        }

        table {
            width: 100% !important;
            border-collapse: collapse !important;
        }

            table th, table td {
                border: 1px solid #000 !important;
                background: none !important;
                color: #000 !important;
                font-size: 15pt !important;
                padding: 4pt !important;
            }

        body {
            background: white !important;
            font-size: 17pt !important;
            line-height: 1.2 !important;
            margin: 0 !important;
            padding: 0 !important;
        }
    }
</style>



<div class="container mt-4 page-container">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="Index"> List</a>
        <div class="col-md-2">
            <button type="button" class="btn btn-info" onclick="window.print()">
                <i class="fa fa-print"></i>
            </button>
        </div>
    </div>
    <div class="card shadow-sm">

        <div class="card-header d-flex justify-content-center">
            <h4 class="mb-0">Update Details</h4>
        </div>
        <div class="card-body d-flex justify-content-between">
            <div>
                <dl class="row">

                    <dt class="col-sm-5">Date</dt>
                    <dd class="col-sm-7">: @Model.SolvedDate?.ToString("dd-MMM-yyyy")</dd>

                    <dt class="col-sm-5">Employee</dt>
                    <dd class="col-sm-7">: @Model.SolvedBy</dd>

                </dl>
            </div>

            <div>
                <dl class="row">

                    <dt class="col-sm-5">Domain Name</dt>
                    <dd class="col-sm-7">: @Model.DomainName</dd>

                    <dt class="col-sm-5">Customer</dt>
                    <dd class="col-sm-7">: @Model.CustomerName</dd>
                   
                </dl>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Issues List</h5>
        </div>
        <div class="card-body">
            @if (Model.SolveDetails != null && Model.SolveDetails.Any())
            {
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-info ">
                        <tr>
                            <th>SL</th>
                            <th>Problem</th>
                            
                        </tr>
                    </thead>
                    <tbody class="table table-hover">
                        @for (int i = 0; i < Model.SolveDetails.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.SolveDetails[i].IssueName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No issues found.</p>
            }
        </div>
    </div>
</div>

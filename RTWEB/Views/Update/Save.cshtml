@using RTWEB.ViewModel
@model UpdateSaveVM

@{
    var project = ViewBag.Project;
}
@{
    ViewData["Title"] = "Update";
}
<style>

    #selectedDomainsList {
        display: flex;
        flex-wrap: wrap;
        gap: 8px 12px; /* row-gap | column-gap */
        padding: 0;
        margin: 0;
    }

    .domain-item {
        flex: 0 0 calc(50% - 12px); /* প্রতি লাইনে 2টা item */
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #0d6efd1a;
        color: #0d6efd;
        border-radius: 25px;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
        box-sizing: border-box;
    }
    /* .domain-item {
        display: inline-flex;
        align-items: center;
        background-color: #0d6efd1a;
        color: #0d6efd;
        border-radius: 25px;
        padding: 6px 12px;
        margin: 4px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
    } */

        .domain-item:hover {
            background-color: #0d6efd33;
        }

        .domain-item button {
            background-color: transparent;
            border: none;
            color: #ff4d4d;
            font-size: 18px;
            margin-left: 8px;
            line-height: 1;
            cursor: pointer;
            transition: 0.2s;
        }

            .domain-item button:hover {
                color: #b30000;
            }
</style>

<div class="container-fluid mt-3">

    <form asp-action="Save" id="myForm" method="post">

        <div class="row">

            <!-- Left Column: Fixed Info -->
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                            <strong>Update Information</strong>
                        </div>
                        <div>
                            <a class="btn btn-primary" asp-action="Index">Update List</a>
                            <a class="btn btn-primary ms-2" asp-controller="Issue" asp-action="Save">Add Issue</a>
                        </div>
                        
                    </div>
                    <div class="card-body">

                        <div class="row mb-3">
                            <label asp-for="Update.UpdateDate" class="col-sm-4 col-form-label">Date</label>
                            <div class="col-sm-8">
                                <input type="text" asp-for="Update.UpdateDate" class="form-control" id="updateDate" value="@DateTime.Now.ToString("dd-MM-yyyy")">
                                <span asp-validation-for="Update.UpdateDate" class="text-danger"></span>
                            </div>
                        </div>

                        @* <div class="row mb-3">
                            <label asp-for="Update.DomainId" class="col-sm-4 col-form-label">Domain</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.DomainId" class="form-control domain-dropdown" asp-items="@(new SelectList(Model.Domain, "Id", "DomainName"))">
                                    <option value="">---Select Developer---</option>
                                </select>
                            </div>
                        </div> *@

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Domain</label>
                            <div class="col-sm-8">
                                <select asp-for="SelectedDomainIds"
                                        class="form-control domain-dropdown"
                                        asp-items="@(new SelectList(Model.Domain, "Id", "DomainName"))"
                                        >
                                </select>
                                <span asp-validation-for="SelectedDomainIds" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.DeveloperId" class="col-sm-4 col-form-label">Developer</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.DeveloperId" class="form-control developer-dropdown" asp-items="@(new SelectList(Model.Developer, "Id", "Name"))">
                                    <option value="">---Select Developer---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.TesterId" class="col-sm-4 col-form-label">Tester</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.TesterId" class="form-control tester-dropdown" asp-items="@(new SelectList(Model.Tester, "Id", "Name"))">
                                    <option value="">---Select Tester---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.BranchName" class="col-sm-4 col-form-label">Branch</label>
                            <div class="col-sm-8">
                                <input asp-for="Update.BranchName" class="form-control" id="name">
                                <span asp-validation-for="Update.BranchName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Project</label>
                            <div class="col-sm-8">
                                <select id="projectId" asp-for="ProjectId" class="form-select project-dropdown">
                                    <option value="">-- Select Project --</option>
                                    @foreach (var p in project)
                                    {
                                        <option value="@p.Id">@p.ProjectName</option>
                                    }
                                </select>
                            </div>
                            <input type="hidden" name="ProjectId" id="hiddenProjectId" />
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label" for="IsSpecialAction">Issue Update?</label>
                            <div class="col-sm-8 d-flex align-items-center">
                                <input type="checkbox" asp-for="IsSpecialAction" class="form-check-input" />
                            </div>
                        </div>
                        

                        <div class="mt-2" id="selectedDomainsContainer">
                            <strong>Selected Domains:</strong>
                            <ul id="selectedDomainsList" class="list-unstyled mt-2"></ul>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Selected Issues -->
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-light"><strong>Selected Issues</strong></div>
                    
                    <div class="card-body">
                        <table class="table table-bordered mt-3" id="issueTable">
                            <thead>
                                <tr>
                                    <th style="width:5%">#</th>
                                    <th>Issue</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <div id="hiddenIssues"></div>
    </form>


</div>

<script>

     $(document).ready(function () {

            $(document).on('click', '.remove-domain', function () {
                $(this).closest('li').remove();
            });

        $(".domain-dropdown").select2({
            placeholder: "--Select Domain(s)--",
            allowClear: true,
            width: '100%'
        });

         $('.domain-dropdown').on('select2:select', function (e) {
            var selectedOption = e.params.data;
            var domainId = selectedOption.id;
            var domainName = selectedOption.text;
            var $list = $('#selectedDomainsList');

            // Duplicate check
            if ($list.find('input[value="' + domainId + '"]').length === 0) {
                $list.append(
                    '<li class="domain-item">' +
                        domainName +
                        '<input type="hidden" name="SelectedDomainIds" value="' + domainId + '"/>' +
                        '<button type="button" class="remove-domain" data-id="' + domainId + '">×</button>' +
                    '</li>'
                );
            }

            // select করা আইটেম deselect হবে কিন্তু dropdown খোলা থাকবে
            var $select = $(this);
            setTimeout(() => {
                $select.val(null).trigger('change.select2');
                $select.select2('open');
            }, 0);
         });

         //
        

         $(".developer-dropdown").select2({
             placeholder: "--Select Developer--",
             allowClear: true,
             width: '100%'
         });

         $(".tester-dropdown").select2({
             placeholder: "--Select Tester--",
             allowClear: true,
             width: '100%'
         });

         $(".project-dropdown").select2({
             placeholder: "--Select Project--",
             allowClear: true,
             width: '100%'
         });

         $(".issue-dropdown").select2({
             placeholder: "--Select Issue--",
             allowClear: true,
             width: '100%'
         });


         $(document).on('select2:open', () => {
             document.querySelector('.select2-search__field').focus();
         });
      });


    // ================= Datepicker =================
    $(function () {
        $("#updateDate").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        });
    });

    // ================= Project & Issue Handling =================
    $(document).ready(function () {

        
        $('#projectId').on('change', function () {
            var projectId = $(this).val();

            if (projectId) {
                if ($('#issueTable tbody tr').length > 0) {
                    $(this).prop('disabled', true);
                }

                    $.ajax({
                    url: '/Update/GetProjectByIssue',
                    type: 'GET',
                    data: { projectId: projectId },
                    dataType: 'json',
                    success: function (data) {
                        var $tableBody = $('#issueTable tbody');
                        $tableBody.empty();

                        if (data.length === 0) {
                            $tableBody.append('<tr><td colspan="2" class="text-center text-muted">No issues found.</td></tr>');
                            return;
                        }

                        $.each(data, function (index, issue) {
                            $tableBody.append(`
                                <tr>
                                    <td class="text-center">
                                        <input type="checkbox" class="issue-checkbox" value="${issue.id}" />
                                    </td>
                                    <td>${issue.title}</td>
                                </tr>
                            `);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching issues:", error);
                    }
                });
            }
        });

          $(document).on('change', '.issue-checkbox', function () {
            var issueId = $(this).val();
            var index = $('#hiddenIssues input').length; // count hidden input

            if ($(this).is(':checked')) {
                $('#hiddenIssues').append(
                    `<input type="hidden" name="UpdateDetails[${index}].IssueId" value="${issueId}" />`
                );
            } else {
                $('#hiddenIssues input[value="' + issueId + '"]').remove();
            }
           });

        // Issue Select → Auto Add
        $('#issueId').on('change', function () {
            var issueName = $('#issueId option:selected').text();
            var issueId = $('#issueId').val();

            if (issueId) {
                // Duplicate check
                if ($('#issueTable tbody tr td input[value="' + issueId + '"]').length > 0) {
                    alert("This issue is already added!");
                    $(this).val('');
                    return;
                }

                var index = $('#issueTable tbody tr').length;

                $('#issueTable tbody').append(
                    '<tr>' +
                        '<td>' + issueName +
                            '<input type="hidden" name="UpdateDetails[' + index + '].IssueId" value="' + issueId + '" />' +
                        '</td>' +
                        '<td><button type="button" class="btn btn-danger btn-sm removeIssue">Remove</button></td>' +
                    '</tr>'
                );

                // projectId এখন lock হয়ে যাবে
                $('#projectId').prop('disabled', true);
                    $('#hiddenProjectId').val($('#projectId').val());

                $(this).val('');
            }
        });

        // Issue Remove
        $(document).on('click', '.removeIssue', function () {
            $(this).closest('tr').remove();

            // যদি আর কোনো issue না থাকে → project আবার enable হবে
            if ($('#issueTable tbody tr').length === 0) {
                $('#projectId').prop('disabled', false);
                 $('#hiddenProjectId').val('');
            }
        });
    });

    // ================= Form Validation =================
    $(document).ready(function () {
        $("#myForm").on('submit', function (e) {
            var offset = 20;
            var container = $("body");

            // Date
            var updateDate = $("#updateDate").val().trim();
            if (updateDate === "") {
                offset = createAlert("❌ Update Date is Required", container, offset);
            }

            // Domain
            var domainId = $("#Update_DomainId").val();
            if (domainId === "") {
                offset = createAlert("❌ Domain is Required", container, offset);
            }

            // Developer
            var developerId = $("#Update_DeveloperId").val();
            if (developerId === "") {
                offset = createAlert("❌ Developer is Required", container, offset);
            }

            // Tester
            var testerId = $("#Update_TesterId").val();
            if (testerId === "") {
                offset = createAlert("❌ Tester is Required", container, offset);
            }

            // Branch name
            var branchName = $("#name").val().trim();
            if (branchName === "") {
                offset = createAlert("❌ Branch Name is Required", container, offset);
            }

            // Project
            var projectId = $("#projectId").val();
            if (projectId === "") {
                offset = createAlert("❌ Project is Required", container, offset);
            }

            // At least 1 issue required
            if ($("#issueTable tbody tr").length === 0) {
                offset = createAlert("❌ At least 1 Issue is Required", container, offset);
            }

            // যদি alert show হয়ে থাকে submit বন্ধ করবে
            if ($(".field-alert").length > 0) {
                e.preventDefault();
                return false;
            }
        });
    });
</script>

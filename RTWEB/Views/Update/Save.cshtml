@using RTWEB.ViewModel
@model UpdateSaveVM

@{
    var project = ViewBag.Project;
}

<div class="container mt-3">
    <form asp-action="Save" id="myForm" method="post">
        <div class="row">

            <div class="d-flex justify-content-end">
                <a class="btn btn-primary" asp-action="Index">Update List</a>
            </div>
           
            <!-- Left Column: Fixed Info -->
            <div class="col-md-7">
                <div class="card mb-3">
                    
                    <div class="card-header">
                        <div>
                            <strong>Update Information</strong>
                        </div>
                        
                    </div>
                    <div class="card-body">

                        <div class="row mb-3">
                            <label asp-for="Update.UpdateDate" class="col-sm-4 col-form-label">Date</label>
                            <div class="col-sm-8">
                                <input type="text" asp-for="Update.UpdateDate" class="form-control" id="updateDate" value="@DateTime.Now.ToString("dd-MM-yyyy")">
                                <span asp-validation-for="Update.UpdateDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.DomainId" class="col-sm-4 col-form-label">Domain</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.DomainId" class="form-control" asp-items="@(new SelectList(Model.Domain, "Id", "DomainName"))">
                                    <option value="">---Select Developer---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.DeveloperId" class="col-sm-4 col-form-label">Developer</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.DeveloperId" class="form-control" asp-items="@(new SelectList(Model.Developer, "Id", "Name"))">
                                    <option value="">---Select Developer---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.TesterId" class="col-sm-4 col-form-label">Tester</label>
                            <div class="col-sm-8">
                                <select asp-for="Update.TesterId" class="form-control" asp-items="@(new SelectList(Model.Tester, "Id", "Name"))">
                                    <option value="">---Select Tester---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Update.BranchName" class="col-sm-4 col-form-label">Branch</label>
                            <div class="col-sm-8">
                                <input asp-for="Update.BranchName" class="form-control" id="name">
                                <span asp-validation-for="Update.BranchName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Project</label>
                            <div class="col-sm-8">
                                <select id="projectId" name="ProjectId" class="form-select ward-dropdown">
                                    <option value="">-- Select Project --</option>
                                    @foreach (var p in project)
                                    {
                                        <option value="@p.Id">@p.ProjectName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label">Select Issue</label>
                            <div class="col-sm-8">
                                <select id="issueId" class="form-select">
                                    <option value="">--Select Issue--</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-warning me-2">Save</button>
                            <button type="reset" class="btn btn-danger me-2">Reset</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Selected Issues -->
            <div class="col-md-5">
                <div class="card mb-3">
                    <div class="card-header bg-light"><strong>Selected Issues</strong></div>
                    <div class="card-body">

                       

                        <table class="table table-bordered mt-3" id="issueTable">
                            <thead>
                                <tr>
                                    <th>Issue</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        
    </form>
</div>

<script>
    // Datepicker
    $(function () {
        $("#updateDate").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        });
    });

   
    $(document).ready(function () {
        $('#projectId').on('change', function () {
            var projectId = $(this).val();
            if (projectId) {
                $(this).prop('disabled', true); 
                $.ajax({
                    url: '/Update/GetProjectByIssue',
                    type: 'GET',
                    data: { projectId: projectId },
                    dataType: 'json',
                    success: function (data) {
                        var $issueDropdown = $('#issueId');
                        $issueDropdown.empty();
                        $issueDropdown.append('<option value="">-- Select Issue --</option>');
                        $.each(data, function (index, issue) {
                            $issueDropdown.append($('<option>', { value: issue.id, text: issue.title }));
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching issues:", error);
                    }
                });
            }
        });

        // Auto add issue on select
            $('#issueId').on('change', function () {
        var issueName = $('#issueId option:selected').text();
        var issueId = $('#issueId').val();

        if (issueId) {
            // Duplicate check
            if ($('#issueTable tbody tr td input[value="' + issueId + '"]').length > 0) {
                alert("This issue is already added!");
                $(this).val('');
                return;
            }

            var index = $('#issueTable tbody tr').length;

            $('#issueTable tbody').append(
                '<tr>' +
                '<td>' + issueName +
                '<input type="hidden" name="Update.UpdateDetails[' + index + '].IssueId" value="' + issueId + '" />' +
                '</td>' +
                '<td><button type="button" class="btn btn-danger btn-sm removeIssue">Remove</button></td>' +
                '</tr>'
            );

            $(this).val('');
        }
    });

        // Remove Issue
        $(document).on('click', '.removeIssue', function () {
            $(this).closest('tr').remove();
        });
    });
</script>

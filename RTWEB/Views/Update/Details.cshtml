@model RTWEB.ViewModel.UpdateVM

<div class="container mt-4">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="Index">Update List</a>
    </div>
    <div class="card shadow-sm">
       
        <div class="card-header">
            <h4 class="mb-0">Update Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Domain:</dt>
                <dd class="col-sm-9">@Model.DomainName</dd>

                <dt class="col-sm-3">Tester:</dt>
                <dd class="col-sm-9">@Model.TesterName</dd>

                <dt class="col-sm-3">Developer:</dt>
                <dd class="col-sm-9">@Model.DeveloperName</dd>

                <dt class="col-sm-3">Branch:</dt>
                <dd class="col-sm-9">@Model.BranchName</dd>

                <dt class="col-sm-3">Update Date:</dt>
                <dd class="col-sm-9">@Model.UpdateDate.ToString("dd-MMM-yyyy")</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Issues List</h5>
        </div>
        <div class="card-body">
            @if (Model.UpdateDetails != null && Model.UpdateDetails.Any())
            {
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-info ">
                        <tr>
                            <th>SL</th>
                            <th>Issue Name</th>
                        </tr>
                    </thead>
                    <tbody class="table table-hover">
                        @for (int i = 0; i < Model.UpdateDetails.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.UpdateDetails[i].IssueName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No issues found.</p>
            }
        </div>
    </div>
</div>

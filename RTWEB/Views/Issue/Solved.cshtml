@using RTWEB.ViewModel
@* @model IEnumerable<IssueVM> *@
@model HMSYSTEM.ViewModels.PagedResult<IssueVM>
@{
    ViewData["Title"] = "Issue";
}

<div class="container-fluid mt-3">

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div>
                    <a asp-controller="Issue" asp-action="Index" class="btn btn-primary">Pending Issue</a>
                </div>
                <div class="card-footer">

                    <div class="d-flex justify-content-end">
                        <a asp-controller="Issue" asp-action="Save" class="btn btn-primary">Add Issue</a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Sl</th>
                                <th>Title</th>
                                <th>Project Name</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
                            }
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.ProjectName</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@item.Id" asp- controller="Appointment" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2"
                                               asp-route-id="@item.Id"
                                               asp-controller="Issue" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    @await Html.PartialAsync("_Pagination", Model)
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>
@using RTWEB.ViewModel
@model IEnumerable<IssueVM>


@{
    ViewData["Title"] = "Issue"; 
}

<div class="container-fluid mt-3">
    
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">

                <div class="card-body">
                    <div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
                        <!-- Search Box -->
                        <div class="flex-grow-1 me-2" style="max-width: 250px;">
                            <input type="text" id="customSearchBox" class="form-control " placeholder="Search">
                        </div>

                       
                        <div>
                            <a asp-controller="Issue" asp-action="Save" class="btn btn-primary ">Add Issue</a>
                            <a asp-controller="Issue" asp-action="Solved" class="btn btn-success ">Solved List</a>
                        </div>
                    </div>

                    <table id="issueTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 10px">Sl</th>
                                <th>Date</th>
                                <th>Issue</th>
                                <th>Project Name</th>
                                <th>Status</th>
                                <th style="width:20px;text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count =  1;
                            }
                            @foreach (var  item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@(item.CreateDate.ToString("dd-MM-yyyy"))</td>
                                    <td>@item.Title</td>
                                    <td>@item.ProjectName</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <div class="d-flex justify-content-center btn-group-sm ">

                                            <a class="btn btn-primary ms-2" asp-route-id="@item.Id" asp- controller="Appointment" asp-action="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger ms-2"
                                               asp-route-id="@item.Id"
                                               asp-controller="Issue" asp-action="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td> 
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    @* @await Html.PartialAsync("_Pagination", Model)  *@
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#issueTable').DataTable({
            "pageLength": 10,
            "lengthMenu": [5, 10, 20, 50],
            "ordering": true,
            "paging": true,
            "info": true,
            "language": {
                "search": "",
                "searchPlaceholder": "Search",
                "lengthMenu": "_MENU_ rows",
                "info": "_TOTAL_ রেকর্ডের মধ্যে _START_ থেকে _END_ দেখানো হচ্ছে",
                "paginate": {
                    "previous": "⬅️ Previous",
                    "next": "Next ➡️"
                }
            },
            "dom": 'rt<"d-flex justify-content-between align-items-center p-2"<"p-0"l><"p-0"p>>'
        });


        $('#customSearchBox').on('keyup', function () {
            table.search(this.value).draw();
        });
    });
</script>